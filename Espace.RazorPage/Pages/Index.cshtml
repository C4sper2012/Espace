@page
@using Espace.Service.Shared.Models
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Your todos</h1>
<button class="btn btn-primary" asp-page="/Create" >Create new</button>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @if (Model.TodoItems.Count != 0)
    {
        @foreach (var item in Model.TodoItems)
        {
            <div class="col">
                <div class="card @(item.Completed ? "border-success" : "border-primary") mb-3" style="max-width: 18rem;">
                    <div class="card-header">@item.Priority - @item.CreatedTime</div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer bg-transparent border-success">
                        <a class="btn btn-danger ms-2" data-bs-toggle="modal" data-bs-target="#exampleModal">Delete</a>
                        <a class="btn btn-primary" asp-page="/Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-primary" asp-page="/Details" asp-route-id="@item.Id">Details</a>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this todo?
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@item.Id">Yes</a>
                            <button class="btn btn-dark">No</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

</div>